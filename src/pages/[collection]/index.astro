--- 
import Layout from "../../layouts/Layout.astro"

const { collection } = Astro.params;
import { getCollection } from 'astro:content'

//is env dev?
const dev = process.env.NODE_ENV !== 'production';

const response = await getCollection(collection, (collection) => {
  if (collection.data.draft && !dev) {
    return false
  }
  return true
});
if (response.length === 0) {
    return Astro.redirect('/404')
}

//collection name = collection capitalised
const collectionName = collection.charAt(0).toUpperCase() + collection.slice(1);

//sort posts by date
const postsByDate = response.sort((a, b) => {
    return new Date(b.data.date) - new Date(a.data.date);
})

const articlePublished = "";
const description = "peter mills' blog";
const tags = [""];
---

<Layout 
  title={collectionName}
  articlePublished={articlePublished}
  description={description}
  tags={tags}
>
    <h1 class="font-black sm:text-7xl break-words text-4xl">{collectionName}</h1>
    <br />
    <div class="flex flex-col gap-5">
        {
            postsByDate.map((post) => {
                return (
                    <div class="flex gap-5">
                        <p class="italic">{new Date(post.data.date).toLocaleDateString('en-GB')}</p>
                        <a class="underline" href={'/' + collection + "/" + post.slug}>{post.data.title}</a>
                    </div>
                )
            })
        }
    </div>
</Layout>