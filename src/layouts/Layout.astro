---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
import "../styles/base.css";
import "@fontsource/inter";
import { Analytics } from "@vercel/analytics/react";

const { title, articlePublished, description, tags } = Astro.props;
---

<script>
	if (
		localStorage.theme === "dark" ||
		(!("theme" in localStorage) &&
			window.matchMedia("(prefers-color-scheme: dark)").matches)
	) {
		document.documentElement.classList.add("dark");
	} else {
		document.documentElement.classList.remove("dark");
	}
</script>

<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<SEO
			title={title}
			titleTemplate="%s | peter mills"
			titleDefault="peter mills"
			description={description}
			charset="utf-8"
			openGraph={{
				basic: {
					title: description,
					type: "website",
					image: "/og.svg",
					url: "",
				},
				optional: {
					description: "",
					locale: "en_GB",
					siteName: "",
				},
				image: {
					secureUrl: "/og.svg",
					alt: "",
					width: 100,
					height: 100,
				},
				article: {
					publishedTime: articlePublished,
					tags: tags,
				},
			}}
			twitter={{
				card: "summary_large_image",
				title: { title },
				description: { description },
				image: "/og.svg",
				imageAlt: "",
			}}
		/>
		<!-- Favicon -->
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
	</head>
	<body
		class="min-h-screen flex flex-col text-dark dark:text-light bg-light dark:bg-dark"
	>
		<Header class="" />
		<main class="lg:px-64 xl:px-96 px-5 grow z-10">
			<slot />
		</main>
		<footer class="text-center py-4 mt-20">
			{new Date().getFullYear() + " "} Â© All rights reserved.
		</footer>
		<Analytics client:only />
	</body>
</html>
